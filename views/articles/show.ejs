<% layout("layout/boilerplate") -%>
<body>
  <div class="container bg-dark"  style="margin-top: 100px; color: white; padding: 5px 0 15px 20px; border-radius: 1%;">
    <h1 class="mb-1"><%= article.title %></h1>
    <div class="text-muted mb-2">
      <%= article.createdAt.toLocaleDateString() %>
    </div>

    <div style="max-width: 60vw;">
      <%- article.sanitizedHtml %>
    </div>
    <a href="/articles/edit/<%= article.id %>" class="btn btn-outline-info">Edit</a>
    <a href="/" class="btn btn-outline-light">All Articles</a>
  </div>